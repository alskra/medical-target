extends medical

block variables
  -
    var pageTitle = pages.fitness.title,
    pageUrls = [pages.fitness.url],
    suffix = 'fitness';
    paths.imgContent = `${paths.imgContent}/${suffix}`;

block slider-main
  +slider-main(sliderMainFitness)

block section-services__lead
  | Лучшие методики и опытные преподаватели

block services-list
  +services-list(servicesListFitness)


block section-about__lead
  | Лучшие методики и опытные преподаватели

block section-about__img
  img.img-responsive(src=`${paths.imgContent}/Fotolia_108319928_Subscription_Monthly_M.jpg` alt='')

block advantages-list
  +advantages-list(advantagesListFitness)


block section-personnel__lead
  | Лучшие методики и опытные преподаватели

block personnel-list
  +personnel-list(personnelListFitness)


block section-reviews__lead
  | Лучшие методики и опытные преподаватели

block reviews-list
  +reviews-list(reviewsListMedical)(data-slick='{"autoplay": true, "autoplaySpeed": 10000}' data-slideout-ignore)


block section-news__lead
  | Лучшие методики и опытные преподаватели

block news-list
  +news-list(newsListFitness)


block section-gallery__lead
  | Лучшие методики и опытные преподаватели

block tabs-gallery-nav
  +a('#tab-1').__nav-item.btn.btn_4 Фитнес
  +a('#tab-2').__nav-item.btn.btn_4 Спортзал
  +a('#tab-3').__nav-item.btn.btn_4 Спортсмены

block tabs-gallery-content-1
  +albums-list(albumsListFitness)

block tabs-gallery-content-2
  +albums-list(albumsListFitness.slice(1, 6))

block tabs-gallery-content-3
  +albums-list(albumsListFitness.slice(1, 5))


block section-prices__lead
  | Лучшие методики и опытные преподаватели