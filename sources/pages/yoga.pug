extends medical

block variables
  -
    var pageTitle = pages.yoga.title,
    pageUrls = [pages.yoga.url],
    suffix = 'yoga';
    paths.imgContent = `${paths.imgContent}/${suffix}`;

block slider-main
  +slider-main(sliderMainYoga)

block section-services__lead
  | Лучшие методики и опытные преподаватели

block services-list
  +services-list(servicesListYoga)


block section-about__lead
  | Лучшие методики и опытные преподаватели

block section-about__img
  img.img-responsive(src=`${paths.imgContent}/Fotolia_107247929_Subscription_Monthly_M.jpg` alt='')

block advantages-list
  +advantages-list(advantagesListYoga)


block section-personnel__lead
  | Лучшие методики и опытные преподаватели

block personnel-list
  +personnel-list(personnelListYoga)


block section-reviews__lead
  | Лучшие методики и опытные преподаватели

block reviews-list
  +reviews-list(reviewsListMedical)(data-slick='{"autoplay": true, "autoplaySpeed": 10000}' data-slideout-ignore)


block section-news__lead
  | Лучшие методики и опытные преподаватели

block news-list
  +news-list(newsListYoga)


block section-gallery__lead
  | Лучшие методики и опытные преподаватели

block tabs-gallery-nav
  +a('#tab-1').__nav-item.btn.btn_4 Обучение
  +a('#tab-2').__nav-item.btn.btn_4 Занятия
  +a('#tab-3').__nav-item.btn.btn_4 Преподаватели

block tabs-gallery-content-1
  +albums-list(albumsListYoga)

block tabs-gallery-content-2
  +albums-list(albumsListYoga.slice(1, 6))

block tabs-gallery-content-3
  +albums-list(albumsListYoga.slice(1, 5))


block section-prices__lead
  | Лучшие методики и опытные преподаватели