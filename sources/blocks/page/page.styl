.page
  display flex

  &_home-project
    display block
    & {$p}__header
      background #2a333c
      margin 0 0 20px
      padding 30px 0
    & {$p}__title
      color white
      margin 0
      small
        color inherit

@keyframes loading
  100%
    transform rotate(360deg)

.loading
  &:before
    content ''
    position absolute
    width rem(30px)
    height rem(30px)
    margin rem(-15px)
    border rem(3px) solid $blue-1
    border-right-color transparent
    border-radius 50%
    top 50%
    left 50%
    right 50%
    bottom 50%
    animation loading 1.2s linear infinite
    z-index $zindex-navbar

//Fancybox
.fancybox-bg
  background white

.fancybox-slide
  white-space nowrap
  > *
    white-space normal
    width 100%
    padding $grid-gutter-width
    background-color white
    box-shadow 0 5px 29px rgba(0, 0, 0, 0.12)
    margin 0

  @media (min-width $screen-md-min)
    padding $grid-gutter-width

//Slideout
.slideout-menu {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  z-index: 0;
  width: 260px;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  display: none;
}

.slideout-panel {
  position: relative;
  z-index: 1;
  will-change: transform;
}

.slideout-open,
.slideout-open body,
.slideout-open .slideout-panel {
  overflow: hidden;
}

.slideout-open .slideout-menu {
  display: block;
}

