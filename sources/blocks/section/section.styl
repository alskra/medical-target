.section
  padding rem(40px) 0

  &__header
    text-align center
    margin-bottom rem(50px)
    &:after
      content ''
      display block
      size rem(143px) rem(3px)
      background linear-gradient(to right, #dfdfdf 33.333%, $blue-1 33.333%, $blue-1 66.666%, #dfdfdf 66.666%)
      margin 0 auto

  &__title
    font-size rem(34px)
    text-transform uppercase
    margin-bottom 0.2em

  &__lead
    color #888
    font-size rem(22px)
    margin-bottom 1.6em

  &_about
    & {r}__text
      text-align center
      margin-bottom rem(35px)
    & {r}__btns
      text-align center
      margin 0 (- $grid-gutter-width/2) rem(25px)
      .btn
        //width rem(200px)
        max-width unquote('calc(100% - ' + $grid-gutter-width + ')')
        margin 0 ($grid-gutter-width/2) rem(20px)

  @media (min-width $screen-md-min)
    padding rem(60px) 0

    &__title
      font-size rem(40px)

    &_about
      .col-md-4_1
        padding-right $grid-gutter-width*1.5
      & {r}__text
        text-align left
      & {r}__btns
        text-align left
        margin-bottom rem(50rem)


