.section
  padding rem(40px) 0

  &__header
    text-align center
    margin-bottom rem(50px)
    &:after
      content ''
      display block
      size rem(143px) rem(3px)
      background linear-gradient(to right, #dfdfdf 33.333%, $blue-1 33.333%, $blue-1 66.666%, #dfdfdf 66.666%)
      margin 0 auto

  &__title
    font-size rem(34px)
    text-transform uppercase
    margin-bottom 0.3em

  &__lead
    color #888
    font-size rem(22px)
    margin-bottom 1.6em

  @media (min-width $screen-sm-min)
    padding rem(60px) 0


