.footer
  flex 0 0 auto
  padding rem(50px) 0
  background-color #f2f2f2
  p
    margin-bottom 1.25em
    &:last-child
      margin-bottom 0
  a:not(.social-networks__item)
    color $black-1
    text-decoration none
    &:hover, &:focus
      color $blue-1
      text-decoration none

  &__col
    &_order
      &_1
        order 1
      &_2
        order 2
      &_3
        order 3
      &_4
        order 4

  &__section
    text-align center
    margin-bottom rem(60px)

  &__title
    color $black-1
    font-size rem(22px)
    margin 0 0 0.9em

  &__license
    color #9e9e9e
    text-align center

  @media (min-width $screen-sm-min)
    padding rem(60px) 0

    &__row
      display block
      column-count 2
      column-gap 0

    &__col
      page-break-inside avoid

    &__section
      text-align left

      &_last
        margin-bottom 0

    &__license
      text-align left

  @media (min-width $screen-md-min)
    &__row
      display flex
      column-count auto

    &__col
      &_order
        &_2
          p
            margin-right 10%