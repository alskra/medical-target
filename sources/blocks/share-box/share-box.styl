.share-box
  display flex
  flex-flow row wrap

  &__item
    display flex
    color inherit
    text-decoration none
    line-height rem(21px)
    height rem(20px)
    white-space nowrap
    margin 0 rem(8px) rem(8px) 0
    &:hover, &:focus
      color inherit
      text-decoration none

  &__btn
    flex none
    display inline-block
    vertical-align top
    text-shadow 0 -1px 1px rgba(0, 0, 0, 0.4)
    color white
    font-size 11px
    font-weight 700
    height 100%
    padding 0 4px
    border-radius 2px
    transition inherit
    &:before
      line-height rem(19px)
      margin-right 4px
    &.glyphicon-facebook
      background-color #405ba3
      &:before
        font-size rem(15px)
      &:hover, &:focus
        background-color lighten(#405ba3, 8%)
    &.glyphicon-twitter
      background-color #00abf0
      &:before
        font-size rem(15px)
      &:hover, &:focus
        background-color lighten(#00abf0, 8%)
    &.glyphicon-vkontakte
      background-color #5e82ac
      &:before
        font-size rem(13px)
      &:hover, &:focus
        background-color lighten(#5e82ac, 8%)

  &__counter
    flex none
    display inline-block
    vertical-align top
    color #6a717f
    font-size 11px
    height 100%
    padding 0 5px
    background-color #eee
    border-radius 2px
    position relative
    transition inherit
    margin-left 6px
    &:before
      content ''
      border-right 6px solid #eee
      border-top 3px solid transparent
      border-bottom 3px solid transparent
      position absolute
      top 50%
      right 100%
      margin -3px 0