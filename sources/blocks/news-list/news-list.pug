mixin news-list(newsList)
  .-news-list&attributes(attributes)
    .__row.row
      each newItem, index in newsList
        .__col.col-xs-12.col-lg-6
          article.-new-item
            +a(`${suffix}/new-${index + 1}.html`).__img-wrap.glyphicon.glyphicon-plus(data-fancybox='new?1' data-type='ajax')
              img.__img(src=`${paths.imgContent}/news-list/295x295/${newItem.img}`
              srcset=`${paths.imgContent}/news-list/295x295/${newItem.img} 1x, ${paths.imgContent}/news-list/590x590/${newItem.img} 1.25x`
              alt='' data-object-fit='cover' onload='objectFit(this)')
            h3.__title
              +a(`${suffix}/new-${index + 1}.html`).__title-link(data-fancybox='new?2' data-type='ajax') #{newItem.title}
            .__description
              p #{newItem.description}
      // Spacers
      .__col.col-xs-12.col-lg-6
      .__col.col-xs-12.col-lg-6