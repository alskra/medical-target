.header
  flex 0 0 auto
  width 100%
  background white
  position fixed
  top 0
  left 0
  z-index $zindex-navbar-fixed

  &__inner-top
    border-bottom 1px solid #dfdfdf
    .container-fluid
      display flex
      align-items flex-start

  &__toggle-menu
    flex none
    color $blue-1
    font-size rem(19px)
    line-height 1em
    width rem(64px)
    height rem(60px)
    padding 0 $grid-gutter-width
    border 0
    background none
    transition color $transition-duration-base $transition-timing-function-base
    margin 0 0 0 (- $grid-gutter-width)
    &:hover, &:focus
      color darken($blue-1, 15%)

    &_opened
      font-size rem(20px)

  &__logo
    display inline-block
    vertical-align top
    flex none
    color inherit
    text-decoration none
    font-size rem(18px)
    text-transform uppercase
    font-weight 900
    white-space nowrap
    max-width 100%
    height rem(47px)
    line-height rem(49px)
    margin auto 0 auto auto
    &:hover, &:focus
      color inherit
      text-decoration none

  &__logo-img
    display inline-block
    vertical-align top
    height 100%
    margin 0 rem(15px) 0 0

  @media (min-width $screen-sm-min)
    &__logo
      font-size rem(23px)
      margin auto auto auto 0

    &__btn-feedback
      flex none
      margin auto 0 auto auto

  @media (min-width $screen-md-min)
    position relative

    &__inner-top
      padding rem(17px) 0

    &__btn-feedback
      margin-left rem(30px)

    &__contacts
      overflow hidden
      flex 0 1 auto
      line-height 1.25em
      text-transform uppercase
      padding-left rem(30px)
      position relative
      margin auto 0 auto rem(30px)
      &:before
        color $blue-1
        font-size rem(19px)
        position absolute
        left 0
      &.glyphicon-mail
        &:before
          font-size rem(17px)
      a
        color $black-1
        text-decoration none
        font-weight 900
        &:hover, &:focus
          color $blue-1
          text-decoration none
      small
        font-size rem(12px)

    &__inner-bottom
      border-bottom 1px solid #dfdfdf
      .container-fluid
        display flex
        align-items flex-start

  @media (min-width $screen-lg-min)
    &__btn-feedback
      margin-left rem(55px)

    &__contacts
      margin-left rem(55px)